        android:layout_below="@+id/friHours"
        android:layout_toRightOf="@+id/friHours"/>

    <TextView
        android:id="@+id/satLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:width="100dp"
        android:text="Saturday:"
        android:layout_below="@+id/friDesc"/>
    <TextView
        android:id="@+id/sat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@+id/friDesc"
        android:layout_toRightOf="@+id/satLabel"/>
    <TextView
        android:id="@+id/satHoursLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:width="100dp"
        android:text="Hours:"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/sat"/>
    <TextView
        android:id="@+id/satHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@+id/sat"
        android:layout_toRightOf="@+id/satHoursLabel"/>
    <TextView
        android:id="@+id/satDescLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:width="100dp"
        android:text="Description:"
        android:layout_marginLeft="30dp"
