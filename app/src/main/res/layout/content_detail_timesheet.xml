        android:id="@+id/satDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@+id/satHours"
        android:layout_toRightOf="@+id/satHours"/>

    <TextView
        android:id="@+id/sunLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:width="100dp"
        android:text="Sunday:"
        android:layout_below="@+id/satDesc"/>
    <TextView
        android:id="@+id/sun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@+id/satDesc"
        android:layout_toRightOf="@+id/sunLabel"/>
    <TextView
        android:id="@+id/sunHoursLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:width="100dp"
        android:text="Hours:"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/sun"/>
    <TextView
        android:id="@+id/sunHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@+id/sun"
        android:layout_toRightOf="@+id/sunHoursLabel"/>
    <TextView
        android:id="@+id/sunDescLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:width="100dp"
        android:text="Description:"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/sunHours"/>
    <TextView
        android:id="@+id/sunDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@+id/sunHours"
        android:layout_toRightOf="@+id/sunHours"/>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sunDesc"
        android:gravity="center"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/btnApprove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Approve"/>

        <Button
            android:id="@+id/btnReject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/btnApprove"
            android:text="Reject"/>

    </RelativeLayout>
</RelativeLayout>
