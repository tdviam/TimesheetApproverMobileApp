        android:text="Description:"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/thuHours"/>
    <TextView
        android:id="@+id/thuDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@+id/thuHours"
