    <TextView
        android:id="@+id/friLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:width="100dp"
        android:text="Friday:"
        android:layout_below="@+id/thuDesc"/>
    <TextView
        android:id="@+id/fri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:layout_below="@+id/thuDesc"
        android:layout_toRightOf="@+id/friLabel"/>
    <TextView
        android:id="@+id/friHoursLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="16dp"
        android:width="100dp"
        android:text="Hours:"
        android:layout_marginLeft="30dp"
        android:layout_below="@+id/fri"/>
    <TextView
        android:id="@+id/friHours"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16dp"
